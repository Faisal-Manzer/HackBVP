</head>
<body>

    <% include header.ejs %>
  <div class="container">
      <div class="row">
          <div class="col s12 l12">
              <button class="btn" > Affected</button>
              <button class="btn">UnAffected</button>
          </div>
          <div class="row">
            <div class="col s12 m6">
              <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                  <span class="card-title">Card Title</span>
                  <div class="row">
                    <form class="col s12" action="/org" method="POST">
                      <div class="row">
                        <div class="input-field col s6">
                          <!-- <i class="material-icons prefix">account_circle</i> -->
                          <input id="icon_prefix" type="text" name="name" class="validate">
                          <label for="icon_prefix">Full Name</label>
                        </div>
                        <div class="input-field col s6">
                          <!-- <i class="material-icons prefix">phone</i> -->
                          <input id="icon_telephone" type="tel" name="condition" class="validate">
                          <label for="icon_telephone">Condition</label>
                        </div>
                        <div class="input-field col s6">
                            <!-- <i class="material-icons prefix">account_circle</i> -->
                            <input id="icon_prefix1" type="text" name="guardianname" class="validate">
                            <label for="icon_prefix1">Gardian Name</label>
                          </div>
                          <div class="input-field col s6">
                            <!-- <i class="material-icons prefix">phone</i> -->
                            <input id="icon_telephone1" type="tel" name="phonenumber" class="validate">
                            <label for="icon_telephone1">Telephone</label>
                          </div>
                          <div class="input-field col s6">
                            <input id="icon_telephone2" type="text" name="critical" class="validate">
                            <label for="icon_telephone2">Critical</label>
                          </div>
                      </div>
                   
                  </div>
                </div>
                <div class="card-action">
                  <button class="btn">Admite</button>
                  <button class="btn">Discharge</button>
                </div>
            </form>
              </div>
            </div>
          </div>
      </div>
  </div>
      



<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

</body>
</html>
